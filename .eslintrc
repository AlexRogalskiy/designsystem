{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": "eslint-config-ffe",
    "parserOptions": {
        sourceType: "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "jsx-a11y"
    ],
    
    "globals": {
        "describe": true,
        "it": true
    },
    "rules": {
        "react/prefer-es6-class": 0,
        "curly": 0,
        "no-script-url": 0,
        "react/require-render-return": 0
    }
}