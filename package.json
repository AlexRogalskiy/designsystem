{
    "name": "@sb1/ffe",
    "version": "1.0.0",
    "description": "Felles Front End",
    "author": "SpareBank 1",
    "license": "SEE LICENSE IN README.md",
    "private": true,
    "scripts": {
        "clean": "run-s clean:lib clean:lerna",
        "clean:icons": "lerna clean --scope ffe-icons-react",
        "clean:lib": "rimraf packages/*/lib",
        "clean:lerna": "lerna clean --yes",
        "precommit": "precise-commits",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "postinstall": "npm run bootstrap",
        "bootstrap": "lerna bootstrap",
        "prebuild": "mkdirp dist/fonts",
        "build": "run-p build:css build:fonts && lerna run --parallel build",
        "build:css": "lessc packages/ffe-all.less dist/ffe.css",
        "build:fonts": "cp -r packages/ffe-webfonts/fonts dist",
        "lint": "lerna run --parallel lint",
        "start": "styleguidist server",
        "styleguidist": "styleguidist",
        "styleguidist:build": "styleguidist build",
        "test": "run-s test:js test:nsp",
        "test:js": "jest",
        "test:nsp": "lerna run --parallel test:nsp",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@commitlint/cli": "^5.2.5",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.2.1",
        "babel-loader": "^7.1.2",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-3": "^6.24.1",
        "case": "^1.5.4",
        "css-loader": "^0.28.7",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "eslint": "^4.13.1",
        "eslint-config-prettier": "^2.9.0",
        "husky": "^0.14.3",
        "jest": "^22.4.0",
        "lerna": "^2.8.0",
        "less": "^2.7.3",
        "less-loader": "^4.0.5",
        "less-plugin-autoprefix": "^1.5.1",
        "mkdirp": "^0.5.1",
        "npm-run-all": "^4.1.2",
        "nsp": "^3.2.1",
        "precise-commits": "^1.0.0",
        "prettier": "^1.10.2",
        "react": "^16.1.1",
        "react-dom": "^16.1.1",
        "react-scrollspy": "^3.3.5",
        "react-styleguidist": "^6.0.32",
        "rimraf": "^2.6.2",
        "style-loader": "^0.19.1",
        "stylelint-config-prettier": "^2.0.0",
        "webpack": "^3.8.1"
    },
    "jest": {
        "setupTestFrameworkScriptFile": "./test-setup.js"
    }
}
