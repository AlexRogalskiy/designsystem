{
    "name": "ffe",
    "version": "1.0.0",
    "description": "Felles Front End",
    "author": "SpareBank 1",
    "license": "UNLICENSED",
    "scripts": {
        "clean": "lerna run clean --yes",
        "clean:icons": "lerna run clean --scope ffe-icons-react",
        "precommit": "precise-commits",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "postinstall": "npm run bootstrap",
        "bootstrap": "lerna bootstrap",
        "prebuild": "mkdirp dist/fonts",
        "build": "npm run build:css && npm run build:fonts && lerna run build",
        "build:css": "lessc packages/ffe-all.less dist/ffe.css",
        "build:fonts": "cp -r packages/ffe-webfonts/fonts dist",
        "lint": "lerna run lint",
        "start": "npm run build && styleguidist server",
        "styleguide-content": "node bin/build-content.js",
        "styleguidist:build": "styleguidist build",
        "test": "lerna run test"
    },
    "devDependencies": {
        "@commitlint/cli": "^5.2.5",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.2.1",
        "babel-loader": "^7.1.2",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-3": "^6.24.1",
        "case": "^1.5.4",
        "css-loader": "^0.28.7",
        "eslint": "^4.13.1",
        "eslint-config-prettier": "^2.9.0",
        "handlebars": "^4.0.11",
        "husky": "^0.14.3",
        "lerna": "^2.8.0",
        "less": "^2.7.3",
        "less-loader": "^4.0.5",
        "less-plugin-autoprefix": "^1.5.1",
        "marked": "^0.3.15",
        "mkdirp": "^0.5.1",
        "precise-commits": "^1.0.0",
        "prettier": "^1.10.2",
        "react": "^16.1.1",
        "react-dom": "^16.1.1",
        "react-scrollspy": "^3.3.5",
        "react-styleguidist": "^6.0.32",
        "style-loader": "^0.19.1",
        "stylelint-config-prettier": "^2.0.0",
        "webpack": "^3.8.1"
    }
}
