{
    "name": "ffe-form",
    "version": "8.1.4",
    "description": "Form components for Felles Front End",
    "main": "less/form.less",
    "author": "SpareBank 1",
    "license": "UNLICENSED",
    "scripts": {
        "build":
            "npm run lint && lessc examples/examples.less examples/examples.css --autoprefix && cp -R node_modules/ffe-core/fonts/ examples/fonts/ && echo \"$(date +%T): Updated example\"",
        "lint": "lessc --lint examples/examples.less && stylelint less/*.less",
        "start": "watch \"npm run -s build\" less/",
        "test:nsp": "nsp check",
        "test": "npm run lint && npm run test:nsp",
        "examples":
            "lessc examples/examples.less examples/examples.css --autoprefix && mkdirp examples/fonts && cp -R node_modules/ffe-core/fonts/* examples/fonts/ && echo Now open /examples/[component].html to see styleguide."
    },
    "repository": {
