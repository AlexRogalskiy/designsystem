{
    "packages": ["packages/*", "linting/*"],
    "version": "independent",
    "hoist": true,
    "command": {
        "publish": {
            "allowBranch": "master",
            "conventionalCommits": true,
            "ignoreChanges": [
                ".eslintrc",
                ".gitattributes",
                ".gitignore",
                ".npmignore",
                ".npmrc",
                "*.md",
                "*.spec.js",
                "test-setup.js"
            ],
            "message": "chore(release): publish"
        }
    }
}
